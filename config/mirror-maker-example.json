{
  "metrics_port": 9090,
  "health_port": 8080,
  "log_level": "info",
  "storage_path": "/var/lib/streambus/replication",
  "links": [
    {
      "id": "us-west-to-us-east",
      "name": "US West to US East Replication",
      "type": "active-passive",
      "source_cluster": {
        "cluster_id": "us-west-1",
        "brokers": ["broker1.us-west.example.com:9092", "broker2.us-west.example.com:9092"],
        "connection_timeout": "30s",
        "request_timeout": "10s",
        "retry_backoff": "500ms",
        "max_retries": 3,
        "security": {
          "enable_tls": true,
          "tls_cert_file": "/certs/client.crt",
          "tls_key_file": "/certs/client.key",
          "tls_ca_file": "/certs/ca.crt",
          "tls_skip_verify": false
        }
      },
      "target_cluster": {
        "cluster_id": "us-east-1",
        "brokers": ["broker1.us-east.example.com:9092", "broker2.us-east.example.com:9092"],
        "connection_timeout": "30s",
        "request_timeout": "10s",
        "retry_backoff": "500ms",
        "max_retries": 3,
        "security": {
          "enable_tls": true,
          "tls_cert_file": "/certs/client.crt",
          "tls_key_file": "/certs/client.key",
          "tls_ca_file": "/certs/ca.crt",
          "tls_skip_verify": false
        }
      },
      "topics": ["orders", "users", "inventory"],
      "topic_prefix": "",
      "config": {
        "max_bytes": 10485760,
        "max_messages": 10000,
        "fetch_wait_max_ms": 500,
        "min_bytes": 1,
        "batch_size": 1000,
        "buffer_size": 100000,
        "concurrent_partitions": 10,
        "enable_compression": true,
        "compression_type": "snappy",
        "throttle_rate_bytes_per_sec": 104857600,
        "checkpoint_interval_ms": 5000,
        "sync_interval_ms": 30000,
        "heartbeat_interval_ms": 3000,
        "enable_exactly_once": false,
        "enable_idempotence": true
      },
      "filter": {
        "enabled": false,
        "include_patterns": [],
        "exclude_patterns": [],
        "filter_by_header": {},
        "min_timestamp": "0001-01-01T00:00:00Z",
        "max_timestamp": "0001-01-01T00:00:00Z"
      },
      "transform": {
        "enabled": true,
        "header_transforms": {},
        "key_transform": "",
        "value_transform": "",
        "add_headers": {
          "replicated_from": "us-west-1",
          "replication_link": "us-west-to-us-east"
        },
        "remove_headers": []
      },
      "failover_config": {
        "enabled": true,
        "failover_threshold": 100000,
        "failover_timeout_ms": 60000,
        "max_consecutive_failures": 3,
        "auto_failback": false,
        "failback_delay_ms": 300000,
        "notification_webhook": "https://alerts.example.com/webhook",
        "notification_email": "ops@example.com"
      }
    }
  ]
}
